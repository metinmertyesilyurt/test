<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Product Showcase</title>
  <link rel="stylesheet" href="/css/main.css">
</head>
<body>
  <header>
    <h1>Welcome to Our Product Showcase</h1>
  </header>
  
  <nav>
    <ul>
      <% products.forEach(product => { %>
        <li><a href="/product/<%= product.id %>"><%= product.name %></a></li>
      <% }) %>
    </ul>
  </nav>
  
  <div class="container">
    <% if(products.length > 0) { %>
      <div id="product-display">
        <h2><%= products[0].name %></h2>
        <p><%= products[0].description %></p>
        <form id="product-form" action="/submit-form" method="post">
          <input type="hidden" name="productId" value="<%= products[0].id %>">
          <div class="form-group">
            <label for="name">Name:</label>
            <input type="text" id="name" name="name" required>
          </div>
          <div class="form-group">
            <label for="email">Email:</label>
            <input type="email" id="email" name="email" required>
          </div>
          <div class="form-group">
            <label for="phone">Phone:</label>
            <input type="tel" id="phone" name="phone" required>
          </div>
          <div class="form-group">
            <button type="submit">Send</button>
          </div>
        </form>
      </div>
    <% } else { %>
      <p>No products found.</p>
    <% } %>
  </div>

  <footer id="main-footer">
    <p>Product Showcase Â© 2023</p>
  </footer>
  <script src="/js/main.js"></script>
</body>
</html>
